{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":automergeMinor",
    "schedule:weekly"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Group linting and type-checking tools",
      "groupName": "linting & typing",
      "matchPackageNames": ["ruff", "mypy", "pre-commit"],
      "matchManagers": ["pip_requirements", "pep621", "pre-commit"]
    },
    {
      "description": "Group GitHub Actions updates",
      "groupName": "github-actions",
      "matchManagers": ["github-actions"]
    },
    {
      "description": "Group test dependencies",
      "groupName": "testing",
      "matchPackageNames": ["pytest", "pytest-cov", "coverage"]
    },
    {
      "description": "Group documentation dependencies",
      "groupName": "documentation",
      "matchPackageNames": ["mkdocs*", "mike", "pymdown-extensions", "pygments", "markdown-include"]
    },
    {
      "description": "Auto-merge patch updates for dev/docs deps",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  }
}
